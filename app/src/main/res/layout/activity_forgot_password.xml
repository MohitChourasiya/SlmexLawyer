<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgotPassword">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="70dp">

                <ImageView
                    android:id="@+id/leftarrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/left_arrow"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Has olvidado tu contraseña"
                    android:layout_toRightOf="@+id/leftarrow"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="#000000"

                    android:layout_marginEnd="10dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginBottom="29dp"
                android:src="@drawable/forgotimg"
                android:layout_gravity="center"/>

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:text="Sin preocupaciones. Simplemente complete su correo electrónico y \n
le enviaremos un enlace para restablecer su
clave."
                android:layout_marginBottom="29dp"

                android:textSize="18sp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:background="@drawable/forgotbtn_round"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:hint="Ingrese correo electrónico"
                android:textSize="16sp"

                android:textColorHint="#7D7D7D"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:outlineAmbientShadowColor="#EFB815"
                android:outlineSpotShadowColor="#EFB815"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviar"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>