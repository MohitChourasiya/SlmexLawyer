<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CompleteProfileInfo">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/reg_btn_round"
                android:layout_gravity="end"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                >

                <TextView
                    android:id="@+id/skip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_semi_bold"
                    android:gravity="center"
                    android:text="SKIP"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete su perfil"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="45dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_logo"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="45dp"
                    android:src="@color/black" />
                <ImageView
                    android:id="@+id/uploadImgBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit"
                    android:layout_alignEnd="@+id/profile_logo"
                    android:layout_alignBottom="@+id/profile_logo"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@drawable/profile_edit_info_page">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="11dp"
                    android:background="@null"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Nombre completo"
                    android:inputType="text"
                    android:textColor="#7D7D7D"
                    android:textSize="18sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@drawable/profile_edit_info_page">

                <EditText
                    android:id="@+id/calender_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="11dp"
                    android:background="@null"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Fecha de nacimiento"
                    android:textColor="#7D7D7D"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/calender_txt"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/calender" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@drawable/profile_edit_info_page">


                <EditText
                    android:background="@null"
                    android:id="@+id/down_aro"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Género"
                    android:inputType="text"
                    android:textColor="#7D7D7D"
                    android:textSize="18sp"
                    android:layout_marginStart="11dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/down_aro"
                    android:src="@drawable/down_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@drawable/profile_edit_info_page">


                <EditText
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de teléfono móvil"
                    android:textColor="#7D7D7D"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/inter_regular"/>/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@drawable/profile_edit_info_page">


                <EditText
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección"
                    android:background="@null"
                    android:inputType="text"
                    android:textColor="#7D7D7D"
                    android:textSize="18sp"
                    android:layout_marginStart="11dp"
                    android:fontFamily="@font/inter_regular"/>/>

            </RelativeLayout>





            <androidx.cardview.widget.CardView
                android:id="@+id/pfSubmitBtn"
                android:layout_marginTop="47dp"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="#EFB815"
                android:outlineSpotShadowColor="#EFB815"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                android:layout_marginBottom="46dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Próximo"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>