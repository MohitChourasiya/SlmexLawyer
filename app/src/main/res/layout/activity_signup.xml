<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Signup">

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_height="106dp"
        android:layout_width="300dp"
        android:layout_marginBottom="103dp"
        android:layout_gravity="center"
        android:layout_marginTop="102dp"
        android:background="@drawable/logo"/>
    <EditText
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:background="@drawable/register"
        android:paddingLeft="12dp"
        android:textColorHint="#828282"
        android:textSize="14sp"
        android:hint="Nombre completo"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:inputType="text"/>

    <EditText
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:background="@drawable/register"
        android:paddingLeft="12dp"
        android:textColorHint="#828282"
        android:textSize="14sp"
        android:hint="Email"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:background="@drawable/register"
        android:paddingLeft="12dp"
        android:textColorHint="#828282"
        android:textSize="14sp"
        android:hint="Contraseña"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:inputType="textPassword"/>

    <EditText
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="13dp"
        android:background="@drawable/register"
        android:paddingLeft="12dp"

        android:textColorHint="#828282"
        android:textSize="14sp"
        android:hint="Confirmar contraseña"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:inputType="textPassword"
        android:id="@+id/conf"/>


    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:id="@+id/rcheck">

    <CheckBox
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="65dp"
        android:id="@+id/cbox"
        android:layout_centerVertical="true"
        android:buttonTint="@color/black"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="266dp"
        android:textSize="12sp"
        android:text="Al registrarse, acepta nuestros Términos,\nPolítica de datos y política de privacidad"
        android:layout_toRightOf="@+id/cbox"/>

</RelativeLayout>


        -

        <androidx.cardview.widget.CardView
            android:id="@+id/submitBtn"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="20dp"
            android:outlineAmbientShadowColor="#EFB815"
            android:outlineSpotShadowColor="#EFB815"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Registro"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:textAlignment="center">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="177dp"
        android:layout_marginTop="27dp"
        android:textSize="18sp"
        android:id="@+id/r_text"
        android:text="¿Ya tienes una cuenta?"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#000000"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="177dp"
        android:layout_marginTop="27dp"
        android:textSize="18sp"
        android:id="@+id/l_text_btn"
        android:text="Iniciar sesión"
        android:layout_toRightOf="@+id/r_text"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#000000"/>

</RelativeLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>