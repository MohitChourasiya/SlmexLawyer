<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomepageFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">


            <RelativeLayout
                android:id="@+id/rl_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo_home"
                    android:layout_width="107dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="22dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/notifyBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="31dp"
                    android:background="@drawable/bell" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="18dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toLeftOf="@+id/txt_loc"
                    android:src="@drawable/location" />
                <TextView
                    android:id="@+id/txt_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mexico City"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"/>


            </LinearLayout>

<LinearLayout
    android:layout_width="400dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/homepageimg"
    android:orientation="vertical"
    android:layout_marginBottom="47dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿Por qué unirse a nosotros?"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/montserrat_semibold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="22dp"

        >




        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/PointTwo"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"/>
        <TextView

            android:layout_toRightOf="@+id/PointTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevos clientes"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"/>


    </RelativeLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="29dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#EFB815"
        app:cardElevation="2dp"
        android:layout_marginEnd="42dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas Totales"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="23dp"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/montserrat_semibold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="128"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#02B2A7"
        app:cardElevation="2dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservas de hoy"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="23dp"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/montserrat_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="29dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="175dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#0F70B7"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="42dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ganancias Totales"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="23dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="14dp"
                            android:fontFamily="@font/montserrat_semibold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$3065"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_semibold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="175dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#F75320"
                    app:cardElevation="2dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retiro"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="23dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="14dp"
                            android:fontFamily="@font/montserrat_semibold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$135"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_semibold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Blogs"
    android:fontFamily="@font/montserrat_semibold"
    android:textSize="16sp"
    android:textColor="#000000"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="7dp"
    />
<ImageView
    android:layout_width="385dp"
    android:layout_height="172dp"
    android:src="@drawable/blog"
    android:layout_gravity="center"
    android:layout_marginBottom="60dp"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>